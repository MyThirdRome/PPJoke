{
  "manifest_version": 3,
  "name": "PayPal Autofill",
  "version": "1.0.0",
  "description": "Simple PayPal Autofill Tool",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.paypal.com/*",
    "https://paypal.com/*"
  ]
}